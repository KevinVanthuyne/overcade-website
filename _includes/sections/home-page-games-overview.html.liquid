<div class="max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8 lg:py-16 mx-auto">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 sm:items-stretch md:grid-cols-2 md:gap-8">
        {% for game in site.games %}
            <div class="divide-y divide-gray-200 rounded-2xl border border-gray-200 shadow-sm">
                <a href="{{ game.url }}" class="relative block rounded-tr-3xl border border-gray-100">
  <span
          class="absolute -right-px -top-px rounded-bl-3xl rounded-tr-3xl bg-rose-600 px-6 py-4 font-medium uppercase tracking-widest text-white"
  >
    Save 10%
  </span>

                    <img
                            src="{{ game.image }}"
                            alt=""
                            class="h-100 w-full rounded-tr-3xl object-cover"
                    />

                    <div class="p-4 text-center">
                        <strong class="text-xl font-medium text-gray-900">{{ game.name }}</strong>

                        <p class="mt-2 text-pretty text-gray-500">
                            {{ game.content | markdownify }}
                        </p>

                        <span
                                class="mt-4 block rounded-md border border-indigo-900 bg-indigo-900 px-5 py-3 text-sm font-medium uppercase tracking-widest text-white transition-colors hover:bg-white hover:text-indigo-900"
                        >
      Meer info
    </span>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
