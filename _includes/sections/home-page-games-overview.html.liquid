<div class="max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8 lg:py-16 mx-auto">
    <div class="flex flex-col md:flex-row items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Uitgelicht aanbod</h2>
        <a href="/games.html"
           class="hidden md:flex md:ml-auto text-sky-500 hover:text-sky-600 font-semibold hover:underline flex-row items-center">
            Volledig aanbod
            <svg
                    class="size-5 rtl:rotate-180"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
            >
                <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
            </svg>
        </a>
    </div>
    <div>
        <!-- Carousel for mobile -->
        <section class="md:hidden splide">
            <div class="splide__track">
                <ul class="splide__list">
                    {% for game in site.games %}
                        {% if game.showOnHomepage %}
                            <li class="splide__slide">
                                {% include game-card.html.liquid %}
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </section>

        <!-- 3 games for desktop -->
        <div class="hidden md:grid grid-cols-1 gap-4 sm:grid-cols-3 sm:items-stretch md:grid-cols-3 md:gap-8">
            {% for game in site.games %}
                {% if game.showOnHomepage %}
                    {% include game-card.html.liquid %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <div class="md:hidden flex justify-center mt-6">
        <a href="/games.html"
           class="flex text-sky-500 hover:text-sky-600 font-semibold hover:underline flex-row items-center">
            Volledig aanbod
            <svg
                    class="size-5 rtl:rotate-180"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
            >
                <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
            </svg>
        </a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const splide = new Splide('.splide', {gap: '16px', pagination: false});
        splide.mount();
    });
</script>